@import "../../utils/yx.wxss";

.box{ background:#fff; margin-top:20rpx;}
.input_box{ height:100rpx; margin:0 30rpx; border-bottom:2rpx solid #e6edf2;}
.input_box:last-child{ border-bottom:0;}
.label{ font-size:32rpx; color:#666; width:180rpx; height:100rpx; float:left; justify-content:flex-start;}
.label view{ width:134rpx; font-size:32rpx; color:#666;}
.must{ font-size:32rpx; color:#ff0000; margin-top:10rpx; margin-left:4rpx;}
.input_box input{ font-size:32rpx; width:350rpx; height:100rpx; float:left;}
.input_logo{ width:510rpx; height:100rpx; float:left;}
.logo{ width:78rpx; height:78rpx; border-radius:6rpx;}
.logo_text{ height:100rpx; float:left;}
.logo_control{ width:106rpx; height:100rpx; float:right; margin-right:4rpx; justify-content:space-between;}
.logo_control view{ font-size:20rpx; color:#c5c5c5; width:78rpx; height:78rpx; border-radius:6rpx; background-color:#f5f5f5;}
.arrow{ width:11rpx; height:20rpx;}
.company{ min-height:100rpx; margin:0 30rpx; overflow:hidden;}
.company .label{ height:auto; margin-top:36rpx; line-height:1.3;}
.company view{ font-size:32rpx; width:480rpx; float:left; padding:36rpx 0; line-height:1.3;}
.address_box{ min-height:100rpx; margin:0 38rpx 0 30rpx; overflow:hidden; background-image:url(http://q.img.soukong.cn/website/yx/create_address.png); background-repeat:no-repeat; background-size:27rpx 31rpx; background-position:right center; border-bottom:2rpx solid #e6edf2;}
.address_box .label{ height:40rpx; margin-top:36rpx; line-height:1.3; overflow:hidden;}
.address{ font-size:32rpx; width:420rpx; float:left; padding:36rpx 0; line-height:1.3;}
.submit{ font-size:34rpx; color:#999; width:690rpx; height:88rpx; background-color:#ddd; border-radius:60rpx; margin:0 auto 60rpx;}
.submit_on{ color:#fff; background:linear-gradient(#418fee,#41a8ee); box-shadow:10rpx -5rpx 20rpx rgba(65,168,238,0.3);}
.agree{ overflow:hidden; padding-top:20rpx; margin-bottom:40rpx; position:relative;}
.agree image{ width:24rpx; height:24rpx; float:left; margin:0 10rpx 0 25rpx;}
.agree_text{ font-size:24rpx; color:#999; width:660rpx; float:left; line-height:1.6; margin-top:-6rpx;}
.agree_text text{ color:#5cb8f7;}
.agree_control{ width:200rpx; height:50rpx; position:absolute; left:0; top:0;}
.get_code{ color:#fff; width:160rpx; height:56rpx; background-color:#5cb8f7; border-radius:10rpx;}
.get_code_bg{ background-color:#ccc;}
.industry_box{ height:100rpx; margin:0 30rpx; border-bottom:2rpx solid #e6edf2; justify-content:flex-start;}
.industry{ width:490rpx;}

.place_style{ font-size:32rpx; color:#bac8d2;}
.no_border{ border-bottom:0;}
.lh100{line-height: 100rpx;}

/* 法律声明 */
.law_box{ position:absolute; z-index:6; top:0; bottom:0; left:0; right:0; background-color:#fff;}
.law{ position:absolute; top:0; bottom:170rpx; left:0; right:0; overflow:scroll;} 
.law_hd{ width:686rpx; height:135rpx; background-color:#5cb8f7; border-radius:10rpx; margin:30rpx auto 60rpx; position:relative; box-shadow:0 10rpx 20rpx rgba(92,184,247,0.3);}
.law_hd text{ font-size:30rpx; font-weight:bold; color:#fff; line-height:1.3; width:420rpx; position:absolute; left:190rpx; top:36rpx;}
.law_hd image{ width:135rpx; height:112rpx; position:absolute; left:30rpx; bottom:0;}
.law_list{ margin:0 36rpx 44rpx 30rpx; overflow:hidden;}
.law_list view{ float:left;}
.law_index{ font-family:"arial"; font-size:48rpx; font-weight:bold; width:40rpx; height:40rpx; background-color:#5cb8f7; border-radius:50%; text-indent:15rpx;}
.law_text{ color:#999; width:624rpx; line-height:1.3; margin:4rpx 0 0 16rpx; text-align:justify;}
.law_btn{ font-size:34rpx; color:#fff; width:602rpx; height:88rpx; background-color:#5cb8f7; border-radius:60rpx; position:fixed; left:50%; margin-left:-301rpx; bottom:82rpx; box-shadow:0 0 60rpx rgba(92,184,247,1);}